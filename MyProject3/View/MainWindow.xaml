<Window x:Class="MyProject3.View.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyProject3.View"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300" Title="INLACsWpf" ResizeMode="NoResize"
             Background="AliceBlue">
    <Grid RenderTransformOrigin="0.646,0.455">
        <Label Content="Input Flie" HorizontalAlignment="Left" Margin="45,28,0,0" VerticalAlignment="Top"/>
        <Button Content="Import File" HorizontalAlignment="Left" Margin="162,34,0,0" VerticalAlignment="Top" Width="75" Click="BtnImportFile_Click"/>

